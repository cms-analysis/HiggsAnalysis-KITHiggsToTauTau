<bin name="HiggsToTauTauAnalysis" file="HiggsToTauTauAnalysis.cc">
	<Flags LDFLAGS="-rdynamic" />
	<use name="Kappa/DataFormats" />
	<use name="Artus/Core"/>
	<use name="Artus/Provider"/>
	<use name="Artus/Configuration"/>
	<use name="Artus/Consumer"/>
	<use name="HiggsAnalysis/KITHiggsToTauTau"/>
	<use name="root"/>
	<use name="rootmath"/>
	<use name="roottmva"/>
	<use name="boost"/>
	<use name="boost_regex"/>
	<!-- dependencies of TauSpinner -->
	<use name="SimGeneral/HepPDTRecord"/>
	<use name="heppdt"/>
	<use name="clhep"/>
	<use name="hepmc"/>
	<use name="tauolapp"/>
	<flags EDM_PLUGIN="1"/>
	<!-- dependencies of TauSpinner -->
</bin>

<bin name="ComputeSvfit" file="ComputeSvfit.cc">
	<Flags LDFLAGS="-rdynamic" />
	<use name="root"/>
	<use name="rootmath"/>
	<use name="boost"/>
	<use name="boost_program_options"/>
	<use name="boost_filesystem"/>
	<use name="TauAnalysis/ClassicSVfit" />
	<use name="TauAnalysis/SVfitTF" />
	<use name="Kappa/DataFormats" />
	<use name="Artus/Utility" />
	<use name="HiggsAnalysis/KITHiggsToTauTau" />
</bin>

<bin name="TauSpinnerTest" file="TauSpinnerTest.cc">
	<Flags LDFLAGS="-rdynamic" />
	<use name="root"/>
	<use name="rootmath"/>
	<use name="boost"/>
        <use name="SimGeneral/HepPDTRecord"/>
        <use name="heppdt"/>
        <use name="clhep"/>
        <use name="hepmc"/>
	<use name="tauolapp" />
        <flags EDM_PLUGIN="1"/>
</bin>
