<bin name="HiggsToTauTauAnalysis" file="HiggsToTauTauAnalysis.cc">
	<Flags LDFLAGS="-rdynamic" />
	<Flags LDFLAGS="-Lsrc/Kappa/lib -lKappa" />
	<use name="Artus/Core"/>
	<use name="Artus/Provider"/>
	<use name="Artus/Configuration"/>
	<use name="Artus/Consumer"/>
	<use name="HiggsAnalysis/KITHiggsToTauTau"/>
	<use name="root"/>
	<use name="rootmath"/>
	<use name="roottmva"/>
	<use name="boost"/>
	<use name="boost_regex"/>
	<!-- dependencies of TauSpinner -->
	<use name="SimGeneral/HepPDTRecord"/>
	<use name="heppdt"/>
	<use name="clhep"/>
	<use name="hepmc"/>
	<use name="tauspinner"/>
	<flags EDM_PLUGIN="1"/>
	<!-- dependencies of TauSpinner -->
</bin>

